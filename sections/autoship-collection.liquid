{{ 'autoship-collection.css' | asset_url | stylesheet_tag }}

{% style %}
#shopify-section-{{ section.id }}{
      background: url(//cdn.shopify.com/s/files/1/0020/5393/1055/t/87/assets/bg-product-gradient.gif?v=8968307…);
    background-repeat: repeat-x;
}
#autoship-collection-{{ section.id }}{
  --color-section-background: transparent;
}
  
{%- if section.settings.remove_bottom_spacing -%}
#autoship-collection-{{ section.id }}.section-background{
  padding-bottom: 0;
}
{%- endif -%}
{% endstyle %}

<div id="autoship-collection-{{ section.id }}" class="autoship-collection top-spacing-{{ section.settings.top_spacing }} section-background section-background--{{ section.settings.background_spacing }}" data-section-name="autoship-collection">
 <div class="{{ section.settings.width }}">
<div class="grid">
   <div class="col-sp-12 col-st-12 col-8">
     <div class="grid">
   <div class="col-sp-12 col-st-4 col-4 coll_img_wrapper">
    {% if section.settings.show_collection_image and collection.image %}
             {%- liquid  assign image_ratio = collection.image.aspect_ratio -%}
    
        <div class="image_wrapper" style="--aspect-ratio: {{image_ratio}};">
          {% assign image = collection.image %}
          <img srcset="{%- if image.width >= 360 -%}{{ image | image_url: width: 360 }} 360w,{%- endif -%}
                       {%- if image.width >= 533 -%}{{ image | image_url: width: 533 }} 533w,{%- endif -%}
                       {%- if image.width >= 720 -%}{{ image | image_url: width: 720 }} 720w,{%- endif -%}
                       {%- if image.width >= 940 -%}{{ image | image_url: width: 940 }} 940w,{%- endif -%}
                       {%- if image.width >= 1066 -%}{{ image | image_url: width: 1066 }} 1066w,{%- endif -%}
                       {%- if image.width >= 1500 -%}{{ image | image_url: width: 1500 }} 1500w,{%- endif -%}
                       {{ image | image_url }} {{ image.width }}w"
               src="{{ image | image_url: width: settings.page_width }}"
               sizes="(min-width: {{ settings.page_width }}px) {% if section.settings.width == "page-fullwidth" %}100vw{% else %}{{ settings.page_width | minus: 20 }}{% endif %}, (min-width: 992px) calc(100vw - 140px), calc(100vw - 40px)"
               width="{{ image.width }}"
               height="{{ image.height }}"
               loading="lazy"
               alt="{{ image.alt | escape }}"
               {% render "additional-image-attributes" %}
               >
        </div>
    {% endif %}
   </div>
     <div class="col-sp-12 col-st-8 col-8">
          {% if collection.description != blank %}
            <div class="collection_description page_content">
              {{ collection.description }}
            </div>
          {% endif %}
     </div>

   </div>

       <div class="grid mt-5 autoship-content-wrapper">
   <div class="col-sp-12 col-st-4 col-4">
   </div>
      <div class="col-sp-12 col-st-8 col-8">
     <div class="custom_content">
       <div class="bully-max-autoship-benefits">
    <p class="custom_title">Why should I join?</p>
    <ul class="ticks">
      <li>
        <p class="font-weight-700">Save money</p>
        <p class="cxl-benefit-text body3">Save 10% on the first and the following recurring orders</p>
      </li>
      <li>
        <p class="font-weight-700">Save time and never run out of any item, EVER!</p>
        <p class="cxl-benefit-text body3">So you don’t have to run to the store to buy it hoping that what you need is there</p>
      </li>
    </ul>
    
    <div class="collapse" id="collapseReadMore">
      <ul class="ticks mt-0">
        <li>
          <p class="font-weight-700">Total flexibility to change the order</p>
          <p class="cxl-benefit-text body3">You can skip orders, change date of frequency of shipping, pause, resume, swap products or cancel anytime for FREE!</p>
        </li>
      </ul>
      
      <div class="bully-max-autoship-how">
        <p class="custom_title">How does subscribing to Autoship work?</p>
        <div class="cxl-steps body3">
        <p class="cxl-step"><span class="cxl-circle">1</span>Choose one or more items your dog needs</p>
        <p class="cxl-step"><span class="cxl-circle">2</span>Select the “Subscribe &amp; Save” option</p>
        <p class="cxl-step"><span class="cxl-circle">3</span>Get notified via email in advance every time we ship your order</p>
        <p class="cxl-step"><span class="cxl-circle">4</span>You receive your order and your dog will love it!</p>
        </div>
        </div>

      </div>
        <div class="read-more-gradient-wrapper"> 
          <a class="link-read-more read-more-gradient underline body4" href="javascript:void(0);" data-id="#collapseReadMore">Read more</a>
        </div>
      </div>
     </div>
        
      </div>
       </div>

    <div class="autoship-collection-products">
          <div class="grid">
          <div class="col-sp-12 col-st-4 col-4">
          </div>
          <div class="col-sp-12 col-st-8 col-8">
          <h3 class="mt-0 mb-0 pt-6"><span class="text-orange">Start saving 10%</span> by selecting one or more products below:</h3>
          </div>
          </div>
       {% if collection.products_count == 0 %}
          <div class="grid mt-5">
          <div class="col-sp-12 col-st-4 col-4">
          </div>
          <div class="col-sp-12 col-st-8 col-8">
          <div class="collection collection--empty w-full text-center" id="product-grid" data-id="{{ section.id }}">
          <h3 class="mt0 mb0">
          {{ 'sections.collection_template.empty' | t }}
          </h3>
          </div>
          </div>
          </div>
         {% else %}
            {%- paginate collection.products by 10 -%}

            {% assign products_list = collection.products %}
            {% include 'products-list-autoship' %}
              
            {%- if paginate.pages > 1 -%}
            <div class="grid">
            <div class="col-sp-12 col-st-4 col-4">
            </div>
            <div class="col-sp-12 col-st-8 col-8">
            {%- render 'pagination', paginate: paginate, anchor: '', aligment: 'text-center' -%}
            </div>
            </div>
            {%- endif -%}
            {%- endpaginate -%}
        {% endif %}
     </div>
     
   </div>
   <div class="col-sp-12 col-st-12 col-4">
        {% assign product = all_products.high-protein-dog-food %}
        <div class="autoship-reviews px-3 pb-3 mt-4 mt-sm-6 mt-lg-0">
        <div class="overflow-hidden yotpo yotpo-main-widget" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}" data-price="{{ variant.price | money_without_currency }}"
        data-currency=“{{ shop.currency }}” data-description=“{{ product.description | escape }}“>
        {%- assign yotpo_offload_content = shop.metafields.yotpo.yotpo_offload_content %}
        {%- assign time_now = 'now' | date: '%s' %}
        {%- assign yotpo_live_time = shop.metafields.yotpo.yotpo_live | date: '%s' %}
        {%- assign diff_seconds_from_live = time_now | minus: yotpo_live_time %}
        {%- assign yotpo_main_widget_last_updated = product.metafields.yotpo.main_widget_update_time | date: '%s' %}
        {%- assign diff_seconds_from_last_main_widget_update = time_now | minus: yotpo_main_widget_last_updated %}
        {%- if yotpo_live_time and diff_seconds_from_live < 86400 or yotpo_main_widget_last_updated and diff_seconds_from_last_main_widget_update < 86400 -%}
        {%- assign yotpo_main_widget_obsolete = false %}
        {%- else %}
        {%- assign yotpo_main_widget_obsolete = true %}
        {%- endif %}
        {%- if yotpo_offload_content == 'yes' and yotpo_main_widget_obsolete != true -%}
        {%- for field in product.metafields.yotpo_reviews -%}
        {{ field | last }}
        {%- endfor -%}
        {%- endif %}
        </div>
        </div>
   </div>
</div>
 </div>
</div>

