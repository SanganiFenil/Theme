{{ 'contact-info.css' | asset_url | stylesheet_tag }}

{%- capture section_styles -%}

{% if section.settings.back_image != blank %}  
  #contact-info-{{ section.id }}{
  background-image: url({{ section.settings.back_image | img_url: '1920x' }});
      background-repeat: no-repeat;
    background-size: cover;
        background-position: 65%;
}

@media (max-width: 992px){
   #contact-info-{{ section.id }}{
  background-image: none;
  }
}

  @media (min-width: 1921px){
   #contact-info-{{ section.id }}{
      background-size: contain;

  }
}
{% endif %}

{%- if section.settings.background != 'hide' -%}
{%- liquid
	capture color
	if section.settings.background == 'color'
    echo section.settings.color_background
    else
    echo section.settings.gradient
    endif
    endcapture
-%}
{%- if color != "rgba(0,0,0,0)" and color != blank -%}
#contact-info-{{ section.id }}{
  --color-section-background: {{ color }};
}
{%- endif -%}
  
{%- if section.settings.remove_bottom_spacing -%}
#contact-info-{{ section.id }}.section-background,
#contact-info-{{ section.id }} .section-background{
  padding-bottom: 0;
}
{%- endif -%}
{%- endif -%}


{% if section.settings.btn_hover_text_color != 'rgba(0,0,0,0)' %}
#contact-info-{{ section.id }} .contact-info-content .cta_link{
    color: {{ section.settings.btn_text_color }};
}
{% endif %} 

{%- if section.settings.color_description != "rgba(0,0,0,0)" -%}
#contact-info-{{ section.id }} .contact-info-content .text__description{
  color:{{section.settings.color_description}};
}
{%- endif -%}

{%- endcapture -%}
{%- if section_styles != blank -%}
<style>{{ section_styles }}</style>
{%- endif -%}

<div id="contact-info-{{ section.id }}" class="contact_info top-spacing-{{ section.settings.top_spacing }}{% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}"
     data-section-name="contact info">
  <div class="{{ section.settings.width }}">
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    <div class="grid">
      <div class="col-sst-12 col-6 contact_info_left_part">
    <div class="contact-info-heading">
      {% if section.settings.heading != blank %}
       {%- liquid
          if section.settings.color_heading != "rgba(0,0,0,0)"
          assign color_heading = ' style="color:' | append: section.settings.color_heading | append: ';"'
          endif
      -%}
      <h2 class="{{ section.settings.heading_tag }} section-title mb-5 mb-lg-7" {{ color_heading }}>
        {{ section.settings.heading }}
      </h2>
      {% endif %}
    </div>

      
      <div class="contact-info-content">
        <div class="info_1 display-flex align-items-center">
          {% if section.settings.icon_svg_1 != blank %}
          <div class="info_icon_wrapper mr-3 mr-lg-5">
            <a href="javascript:void(0);" onclick="GorgiasChat.open();">
              {{ section.settings.icon_svg_1 }} 
            </a>
          </div>
            {% endif %}
          <div class="info_text_wrapper">
            {% if section.settings.heading_1 != blank %}
            <a href="javascript:void(0);" onclick="GorgiasChat.open();" class="cta_link link font-weight-700 mr-5">{{ section.settings.heading_1 }} 
             <span class="link_right_icon">></span>
            </a>
              {% endif %}
              {% if section.settings.text_1 != blank %}
            <p class="body3 text__description display-inline-block mt-1 mt-lg-0">{{ section.settings.text_1 }}</p>
                {% endif %}
          </div>
        </div>
                <div class="info_2 display-flex align-items-center">
          {% if section.settings.icon_svg_2 != blank %}
          <div class="info_icon_wrapper mr-3 mr-lg-5">
            <a href="{{ section.settings.cta_link_2 }}">
              {{ section.settings.icon_svg_2 }} 
            </a>
          </div>
            {% endif %}
          <div class="info_text_wrapper">
             {% if section.settings.heading_2 != blank %}
            <a href="{{ section.settings.cta_link_2 }}" class="cta_link link font-weight-700 mr-5">{{ section.settings.heading_2 }} 
             <span class="link_right_icon">></span>
            </a>
               {% endif %}
               {% if section.settings.text_2 != blank %}
            <p class="body3 text__description display-inline-block mt-1 mt-lg-0">{{ section.settings.text_2 }}</p>
                 {% endif %}
          </div>
        </div>
                  <div class="info_3 display-flex align-items-center">
          {% if section.settings.icon_svg_3 != blank %}
          <div class="info_icon_wrapper mr-3 mr-lg-5">
             <a href="{{ section.settings.cta_link_3 }}">
              {{ section.settings.icon_svg_3 }} 
             </a>
          </div>
            {% endif %}
          <div class="info_text_wrapper">
             {% if section.settings.heading_3 != blank %}
            <a href="{{ section.settings.cta_link_3 }}" target="_blank" class="cta_link link font-weight-700 mr-5">{{ section.settings.heading_3 }} 
             <span class="link_right_icon">></span>
            </a>
               {% endif %}
               {% if section.settings.text_3 != blank %}
            <p class="body3 text__description display-inline-block mt-1 mt-lg-0">{{ section.settings.text_3 }}</p>
                 {% endif %}
          </div>
        </div>
      </div>
    </div>
      <div class="col-sst-12 col-6 desktop--hide contact_info_right_part mb-8 mb-md-0">
        {{ section.settings.custom_html }}
      </div>
    </div>
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}</div>{%- endif -%}
    
  </div>
</div>

