{{ 'homepage-brand-featured-in.css' | asset_url | stylesheet_tag }}

{%- capture section_styles -%}
{%- if section.settings.background != 'hide' -%}
{%- liquid
	capture color
	if section.settings.background == 'color'
    echo section.settings.color_background
    else
    echo section.settings.gradient
    endif
    endcapture
-%}
{%- if color != "rgba(0,0,0,0)" and color != blank -%}
#featured_in-{{ section.id }}{
  --color-section-background: {{ color }};
}
{%- endif -%}
{%- if section.settings.remove_bottom_spacing -%}
#featured_in-{{ section.id }}.section-background,
#featured_in-{{ section.id }} .section-background{
  padding-bottom: 0;
}
{%- endif -%}
{%- endif -%}

{% if section.settings.btn_text_color != 'rgba(0,0,0,0)' %}
#featured_in-{{ section.id }} .featured_in-content .cta-button{
    color: {{ section.settings.btn_text_color }};
}
{% endif %}  
{% if section.settings.btn_hover_text_color != 'rgba(0,0,0,0)' %}
#featured_in-{{ section.id }} .featured_in-content .cta-button:hover{
    color: {{ section.settings.btn_hover_text_color }};
}
{% endif %} 

{%- if section.settings.color_description != "rgba(0,0,0,0)" -%}
#featured_in-{{ section.id }} .text__description{
  color:{{section.settings.color_description}};
}
{%- endif -%}


{%- endcapture -%}
{%- if section_styles != blank -%}
<style>{{ section_styles }}</style>
{%- endif -%}

<div id="featured_in-{{ section.id }}" class="featured_in top-spacing-{{ section.settings.top_spacing }}"
     data-section-name="featured-in">

  <div class="featured_in-header">
  <div class="{{ section.settings.width }}">
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}<div class="featured_in_header_inner pt-0 pb-0 section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    
      {% if section.settings.heading != blank %}
       {%- liquid
          if section.settings.color_heading != "rgba(0,0,0,0)"
          assign color_heading = ' style="color:' | append: section.settings.color_heading | append: ';"'
          endif
      -%}
      <h2 class="{{ section.settings.heading_tag }} section-title mb-6 mb-md-8 sm-text-center" {{ color_heading }}>
        {{ section.settings.heading }}
      </h2>
      {% endif %}
    
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}</div>{%- endif -%}
    
  </div>
  </div>

  <div class="featured_in-content {% if section.settings.background != 'hide' and section.settings.background_width == "fullwidth" %} section-background section-background--{{ section.settings.background_spacing }}{% endif %}">
   <div class="{{ section.settings.width }}">
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}<div class="section-background section-background--{{ section.settings.background_spacing }} border__radius">{%- endif -%}
    
    {% for block in section.blocks %}
    <div class="{% if forloop.first == true %} first{% endif %}{% unless forloop.last %} pb-7{% endunless %}">
      <div class="grid align-items-start">
      <div class="col-st-12 col-3">
        <div class="grid align-items-center">
           <div class="col-st-4 col-12">
     {% if block.settings.feature_image != blank %}
        <div class="img_wrapper">
          {% assign imagesize = block.settings.feature_image.width | append: 'x' %}
          <img srcset="{{ block.settings.feature_image | img_url: imagesize }} 1x, {{ block.settings.feature_image | img_url: imagesize, scale: 2 }} 2x"
               src="{{ block.settings.feature_image | img_url: imagesize }}"
               loading="lazy"
               alt="{{ block.settings.feature_image.alt | escape }}"
               >
      </div>
          {% endif %}
           </div>
           <div class="col-st-8 col-12 sm-text-right">
                <cite class="desktop--hide">
          {%if block.settings.feature_url %}
            <a href="{{ block.settings.feature_url }}" class="cta-button"
                title="{{ block.settings.feature_name }}">{{ block.settings.feature_name }} <span class="">></span></a>
          {% else %}
          {{ block.settings.feature_name }}
          {% endif %}
          </cite>
         </div>
        </div>
      </div>
      <div class="col-st-12 col-9">
        <cite class="mobile--hide">
          {%if block.settings.feature_url %}
            <a href="{{ block.settings.feature_url }}" class="cta-button"
                title="{{ block.settings.feature_name }}">{{ block.settings.feature_name }} <span class="">></span></a>
          {% else %}
          {{ block.settings.feature_name }}
          {% endif %}
          </cite>
        <div class="text__description {% if section.settings.description_size != "normal" %} {{ section.settings.description_size }}{% endif %}">{{ block.settings.feature_content }}</div>
          
      </div>
      </div>
    </div>
    {% endfor %}
    
    {% if section.settings.background != 'hide' and section.settings.background_width == "content_width" %}</div>{%- endif -%}
   </div>
  </div>
</div>

