        "id": "color_heading",
        "default": "rgba(0,0,0,0)",
        "label": "t:sections.general.settings.heading.label"
      },
      	  {
		"type": "color",
		"id": "color_description",
		"default": "rgba(0,0,0,0)",
		"label": "t:sections.general.settings.description.label"
	  },
      {
		"type": "color",
		"id": "btn_text_color",
		"default": "rgba(0,0,0,0)",
		"label": "CTA text color"
	  },
